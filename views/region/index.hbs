<section class="hero is-medium is-info is-bold">
      <div class="hero-body">
      <div class="container">
        <h1 class="title">
        Manage Regions
        </h1>
        <h2 class="subtitle">
        Every Pok√©mon lives in one or more regions. You can edit and add them below.
        </h2>
        </div>
    </div>
</section>

<!-- BEGIN TYPES -->
<section class="section">
    <div class="container">
    <div class="columns">

    <div class="column"></div>

    <div class="box column">
        <table class="table is-fullwidth">
            <tbody>
                {{#each region}}
                <tr>
                    <td>{{name}}</td>
                    <td>
                        <form class="is-pulled-right" METHOD="POST" ACTION="/region/{{id}}?_method=DELETE">
                        <button class="button is-rounded">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="column"></div>

    </div>
    </div>
</section>
<!-- END TYPES -->



<!-- BEGIN MODAL FORM -->
<button class="button is-rounded is-info is-medium" id="showModal" data-toggle="modal" aria-controls="add-region">
    <span class="icon"><i class="fas fa-plus"></i></span>
    <span>Add Region</span>
</button>

<div class="modal" id="add-region">
    <div class="modal-background" data-toggle="modal" aria-controls="add-region"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Add a Region</p>
        </header>
        <section class="modal-card-body">
                <form id="add-form" METHOD="POST" ACTION="/region">
                <div class="field">
                    <label class="label">Region</label>
                    <div class="control">
                    <input class="input" type="text" name="name" placeholder="region" required>
                    </div>
                </div>
            </form>
        </section>
        <footer class="modal-card-foot">
            <input class="button is-info is-fullwidth is-rounded" type="submit" form="add-form" value="Add Region">
        </footer>
    </div>

    <button class="modal-close is-large" data-toggle="modal" aria-controls="add-region"></button>
</div>
<!-- END MODAL FORM -->