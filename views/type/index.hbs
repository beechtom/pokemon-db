<section class="hero is-medium is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Manage Types
      </h1>
      <h2 class="subtitle">
        Every Pok√©mon and Move has a type. You can add and edit them below.
      </h2>
    </div>
  </div>
</section>

<!-- BEGIN TYPES -->
<section class="section">
    <div class="container">
    <div class="columns">

    <div class="column"></div>

    <div class="box column">
        <table class="table is-fullwidth">
            <tbody>
                {{#each types}}
                <tr>
                    <td><span style="color:{{color}}"><strong>{{name}}</strong></span></td>
                    <td class="has-text-right">
                        {{!-- <button class="button is-light is-rounded">Edit</button> --}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="column"></div>

    </div>
    </div>
</section>
<!-- END TYPES -->



<!-- BEGIN MODAL FORM -->
<button class="button is-rounded is-info is-medium" id="showModal" data-toggle="modal" aria-controls="add-type">
    <span class="icon"><i class="fas fa-plus"></i></span>
    <span>Add Type</span>
</button>

<div class="modal" id="add-type">
    <div class="modal-background" data-toggle="modal" aria-controls="add-type"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Add a Type</p>
        </header>
        <section class="modal-card-body">
            <form id="add-form" METHOD="POST" ACTION="/type">
            <div class="field">
                <label class="label">Type</label>
                <div class="control">
                <input class="input" type="text" name="name" placeholder="type" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Color</label>
                <div class="control">
                <input class="input" type="color" name="color" required>
                </div>
            </div>
            </form>
        </section>
        <footer class="modal-card-foot">
            <input class="button is-info is-fullwidth is-rounded" type="submit" form="add-form" value="Add Type">
        </footer>
    </div>

    <button class="modal-close is-large" data-toggle="modal" aria-controls="add-type"></button>
</div>
<!-- END MODAL FORM -->